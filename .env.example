# Après avoir ajouté l'addon SendGrid sur Heroku
SENDGRID_API_KEY=votre-clé-sendgrid-automatique
CONTACT_EMAIL=salimoudiaby95@gmail.com

# Option 2: Mailgun (Alternative)
MAILGUN_API_KEY=votre-clé-mailgun
